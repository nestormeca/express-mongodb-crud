{{#if tasks}}

  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N.</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>
            {{#if done}}
              <a href="/toggleDone/{{_id}}" class="btn btn-dark">Undone</a>
            {{else}}
              <a href="/toggleDone/{{_id}}" class="btn btn-success">Done</a>
            {{/if}}

            <a href="/tasks/{{_id}}/edit" class="btn btn-info">Update</a>
            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

{{else}}
  <div>
    <h1>No Tasks</h1>
    <img src="" alt="" />
  </div>
{{/if}}